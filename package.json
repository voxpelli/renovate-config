{
  "name": "@voxpelli/renovate-config",
  "description": "Personal preset package for Renovate",
  "version": "1.9.0",
  "license": "MIT",
  "author": "Pelle Wessman <pelle@kodfabrik.se> (http://kodfabrik.se/)",
  "homepage": "https://github.com/voxpelli/renovate-config-voxpelli",
  "repository": {
    "type": "git",
    "url": "git://github.com/voxpelli/renovate-config-voxpelli.git"
  },
  "bugs": {
    "url": "https://github.com/voxpelli/renovate-config-voxpelli/issues"
  },
  "renovate-config": {
    "replaceDevDependencies": {
      "packageRules": [
        {
          "depTypeList": [
            "devDependencies"
          ],
          "rangeStrategy": "replace"
        }
      ]
    },
    "groupLinters": {
      "description": "Group all major and non-major linter package updates together respectively",
      "packageRules": [
        {
          "extends": "packages:linters",
          "packagePatterns": [
            "eslint"
          ],
          "packageNames": [
            "dependency-check",
            "detective-cjs",
            "installed-check",
            "typescript",
            "@types/node"
          ],
          "major": {
            "groupName": "linter-majors"
          },
          "minor": {
            "groupName": "linters",
            "automerge": true
          }
        }
      ]
    },
    "groupTests": {
      "description": "Group all non-major test package updates together",
      "packageRules": [
        {
          "extends": "packages:test",
          "packageNames": [
            "concurrently",
            "husky",
            "nodemon"
          ],
          "major": {
            "groupName": "tests-major"
          },
          "minor": {
            "groupName": "tests",
            "automerge": true
          }
        }
      ]
    },
    "unitGroup": {
      "extends": [
        "group:test"
      ]
    },
    "libDefault": {
      "extends": [
        "@voxpelli"
      ]
    },
    "appDefault": {
      "extends": [
        "@voxpelli",
        "@voxpelli:replaceDevDependencies"
      ],
      "lockFileMaintenance": {
        "extends": [
          "schedule:monthly"
        ],
        "enabled": true
      }
    },
    "default": {
      "extends": [
        "config:js-lib",
        ":masterIssue",
        "@voxpelli:groupLinters",
        "@voxpelli:groupTests",
        "schedule:monthly",
        ":prHourlyLimit4",
        ":prConcurrentLimit20",
        "@voxpelli:replaceDevDependencies"
      ],
      "timezone": "Europe/Stockholm",
      "assignees": [
        "voxpelli"
      ],
      "ignoreDeps": [
        "@types/node"
      ]
    }
  }
}
