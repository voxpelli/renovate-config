{
  "name": "@voxpelli/renovate-config",
  "description": "Personal preset package for Renovate",
  "version": "2.8.5",
  "license": "MIT",
  "author": "Pelle Wessman <pelle@kodfabrik.se> (http://kodfabrik.se/)",
  "homepage": "https://github.com/voxpelli/renovate-config-voxpelli",
  "repository": {
    "type": "git",
    "url": "git://github.com/voxpelli/renovate-config-voxpelli.git"
  },
  "bugs": {
    "url": "https://github.com/voxpelli/renovate-config-voxpelli/issues"
  },
  "scripts": {
    "test": ""
  },
  "renovate-config": {
    "replaceDevDependencies": {
      "packageRules": [
        {
          "depTypeList": [
            "devDependencies"
          ],
          "rangeStrategy": "replace"
        }
      ]
    },
    "bumpPeerDependencies": {
      "packageRules": [
        {
          "depTypeList": [
            "peerDependencies"
          ],
          "rangeStrategy": "bump"
        }
      ]
    },
    "bumpDevDependencies": {
      "packageRules": [
        {
          "depTypeList": [
            "devDependencies"
          ],
          "rangeStrategy": "bump"
        }
      ]
    },
    "groupLinters": {
      "description": "Group all major and non-major linter package updates together respectively",
      "packageRules": [
        {
          "extends": "packages:linters",
          "matchPackagePrefixes": [
            "eslint"
          ],
          "packageNames": [
            "dependency-check",
            "detective-cjs",
            "installed-check"
          ],
          "major": {
            "groupName": "linter-majors"
          },
          "minor": {
            "groupName": "linters"
          }
        }
      ]
    },
    "groupTypes": {
      "description": "Group all major and non-major type related package updates together",
      "packageRules": [
        {
          "matchPackagePrefixes": [
            "@types/"
          ],
          "packageNames": [
            "@voxpelli/tsconfig",
            "tsd",
            "type-coverage",
            "type-fest",
            "typescript"
          ],
          "major": {
            "groupName": "types-major"
          },
          "minor": {
            "groupName": "types-minor"
          }
        }
      ]
    },
    "groupStyles": {
      "description": "Group all major and non-major CSS related package updates together",
      "packageRules": [
        {
          "packagePatterns": [
            "postcss",
            "stylelint"
          ],
          "packageNames": [
            "autoprefixer",
            "browserslist",
            "sass"
          ],
          "major": {
            "groupName": "styles-majors"
          },
          "minor": {
            "groupName": "styles"
          }
        }
      ]
    },
    "groupTests": {
      "description": "Group all non-major test package updates together",
      "packageRules": [
        {
          "extends": "packages:test",
          "packagePatterns": [
            "chai",
            "mocha",
            "sinon"
          ],
          "packageNames": [
            "c8",
            "concurrently",
            "cross-env",
            "husky",
            "nodemon",
            "nyc",
            "npm-run-all"
          ],
          "major": {
            "groupName": "tests-major"
          },
          "minor": {
            "groupName": "tests"
          }
        }
      ]
    },
    "vpSchedule": {
      "schedule": [
        "on Tuesday"
      ]
    },
    "unitGroup": {
      "extends": [
        "group:test"
      ]
    },
    "libDefault": {
      "extends": [
        "@voxpelli"
      ]
    },
    "vpBase": {
      "extends": [
        "config:js-lib",
        ":masterIssue",
        ":prConcurrentLimit20",
        ":noUnscheduledUpdates",
        "@voxpelli:vpSchedule",
        "@voxpelli:bumpDevDependencies"
      ],
      "prHourlyLimit": 4,
      "timezone": "Europe/Stockholm"
    },
    "appDefault": {
      "extends": [
        "@voxpelli"
      ],
      "lockFileMaintenance": {
        "enabled": true
      }
    },
    "default": {
      "extends": [
        "@voxpelli:vpBase",
        "@voxpelli:groupStyles",
        "@voxpelli:groupTypes",
        "@voxpelli:groupTests",
        "@voxpelli:groupLinters"
      ]
    }
  }
}
