{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":semanticCommits",
    ":semanticPrefixFixDepsChoreOthers"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "peerDependencies"
      ],
      "rangeStrategy": "bump",
      "semanticCommitScope": "",
      "semanticCommitType": "fix!"
    },
    {
      "matchDepTypes": [
        "peerDependencies"
      ],
      "matchUpdateTypes": ["major"],
      "semanticCommitScope": "",
      "semanticCommitType": "feat!"
    }
  ]
}
